<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content">

        <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="85dp">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/number"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/txtFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:text="15"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    tools:ignore="HardcodedText"/>

        </RelativeLayout>



        <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="15dp">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/number"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/txtOperation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:text="+"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"
                    tools:ignore="HardcodedText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="85dp">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="85dp"
                    android:src="@drawable/number"
                    android:scaleType="fitXY"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/txtSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:text="15"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    tools:ignore="HardcodedText"/>

        </RelativeLayout>

    </LinearLayout>


    <EditText
            android:id="@+id/txtAnswer"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:background="@drawable/style_answer"
            android:hint="@string/write_your_answer"
            android:textColorHint="#C4E2E2E2"
            android:gravity="center"
            android:textSize="20sp"
            tools:ignore="Autofill,TextFields"/>

    <Button
            android:id="@+id/btnSubmit"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/style_submit"
            android:gravity="center"
            android:text="@string/answer"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#CCFFFFFF"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="41sp"
            android:gravity="center"
            android:textColor="@color/colorCircle"
            android:text="@string/score"/>

    <TextView
            android:id="@+id/txtscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="41sp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/colorCircle"/>

</LinearLayout>