<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4DE77B3B"/>
            <corners android:radius="32dp" />
        </shape>
    </item>

    <item
            android:left="0dp"
            android:right="1dp"
            android:top="0dp"
            android:bottom="2dp">

        <shape android:shape="rectangle">
            <size android:height="85dp" android:width="85dp"/>
            <solid android:color="#EF631C"/>
            <corners android:radius="32dp" />
        </shape>
    </item>
</layer-list>